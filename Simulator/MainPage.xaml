<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simulator.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <!-- OS Picker -->
            <Picker x:Name="OsPicker">
                <Picker.Items>
                    <x:String>Windows</x:String>
                    <x:String>Android</x:String>
                    <x:String>iOS</x:String>
                </Picker.Items>
            </Picker>

            <!-- Priority Picker -->
            <Picker x:Name="PriorityPicker" Title="Select Process Priority">
                <Picker.Items>
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </Picker.Items>
            </Picker>

            <!-- Button to Simulate Process Creation -->
            <Button Text="Simulate Process Creation" Clicked="OnSimulateProcessClick"/>

            <!-- Button to Simulate Memory Allocation -->
            <Button Text="Simulate Memory Allocation" Clicked="OnSimulateMemoryAllocation"/>

            <!-- Button for File Operations -->
            <Button Text="Create File" Clicked="OnCreateFile"/>
            <Button Text="Read File" Clicked="OnReadFile"/>
            <Button Text="Write File" Clicked="OnWriteFile"/>

            <!-- Button to Start Monitoring Resources -->
            <Button Text="Start Monitoring" Clicked="OnStartMonitoring"/>

            <!-- Output editor for showing logs -->
            <Editor x:Name="OutputEditor" AutoSize="TextChanges" HeightRequest="200"/>

            <!-- Memory and Resource Usage -->
            <Label x:Name="MemoryStatusLabel" Text="Memory: Unallocated" />
            <Label x:Name="CpuUsageLabel" Text="CPU Usage: 0%" />
            <Label x:Name="MemoryUsageLabel" Text="Memory Usage: 0%" />
            <Label x:Name="FileStatusLabel" Text="File Operations: None" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>