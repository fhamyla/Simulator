<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simulator.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <!-- Main Area: App Icons Grid -->
            <Grid ColumnSpacing="15" RowSpacing="15" HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- App Icon 1 -->
                <Button Grid.Row="0" Grid.Column="0" Text="File Explorer" BackgroundColor="#444" TextColor="White" />
                <!-- App Icon 2 -->
                <Button Grid.Row="0" Grid.Column="1" Text="Browser" BackgroundColor="#444" TextColor="White" />
                <!-- App Icon 3 -->
                <Button Grid.Row="0" Grid.Column="2" Text="Media Player" BackgroundColor="#444" TextColor="White" />

                <!-- App Icon 4 -->
                <Button Grid.Row="1" Grid.Column="0" Text="Documents" BackgroundColor="#444" TextColor="White" />
                <!-- App Icon 5 -->
                <Button Grid.Row="1" Grid.Column="1" Text="Music" BackgroundColor="#444" TextColor="White" />
                <!-- App Icon 6 -->
                <Button Grid.Row="1" Grid.Column="2" Text="Games" BackgroundColor="#444" TextColor="White" />
            </Grid>
            <!-- Taskbar Section -->
            <StackLayout Orientation="Horizontal" BackgroundColor="#CCCCCC" Padding="5" HorizontalOptions="FillAndExpand">
                <!-- Start Menu Icon -->
                <Button Text="Start" BackgroundColor="#444" TextColor="White" HorizontalOptions="Start" />

                <!-- Pinned Apps Section -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Button Text="File Explorer" BackgroundColor="#444" TextColor="White" />
                    <Button Text="Task Manager" BackgroundColor="#444" TextColor="White" />
                    <Button Text="Settings" BackgroundColor="#444" TextColor="White" />
                </StackLayout>

                <!-- System Tray Section (Clock, Battery, Wi-Fi) -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                    <Label Text="12:30 PM" TextColor="White" VerticalOptions="Center" />
                    <Label Text="Wi-Fi" TextColor="White" VerticalOptions="Center" Margin="10,0" />
                    <Label Text="Battery 75%" TextColor="White" VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>